{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ],
  "compilerOptions": {
    "downlevelIteration": true,
    "outDir": "dist/",
    "baseUrl": "./src",
    "paths": {
      "#libs/*": ["libs/*"],
      "#calc/*": ["modules/calc/*"],
      "#tools/*": ["modules/tools/*"]
    },
    "module": "commonjs",
    "target": "ES3",
    "lib": ["ES2019"]
  }
}
