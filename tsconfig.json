{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist/",
    "baseUrl": "./src",
    "paths": {
      "#libs/*": ["libs/*"],
      "#calc/*": ["modules/calc/*"],
      "#tools/*": ["modules/tools/*"]
    },
    "module": "commonjs",
    "target": "ES2019",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
